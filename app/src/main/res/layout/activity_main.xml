<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/darker_gray"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <EditText
            android:id="@+id/Matricula"
            android:layout_width="144dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="99dp"
            android:layout_marginEnd="224dp"
            android:layout_marginRight="224dp"
            android:hint="Matricula"
            android:inputType="number"
            android:shadowColor="black"
            android:textColorHint="black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/Nombre"
            android:layout_width="144dp"
            android:layout_height="wrap_content"

            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="99dp"
            android:layout_marginEnd="66dp"
            android:layout_marginRight="66dp"
            android:hint="Nombre(s)"
            android:inputType="text"
            android:shadowColor="black"
            android:textColorHint="black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/APaterno"
            android:layout_width="144dp"
            android:layout_height="wrap_content"

            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="167dp"
            android:layout_marginEnd="222dp"
            android:layout_marginRight="222dp"
            android:hint="Apellido Paterno"
            android:inputType="text"
            android:shadowColor="black"
            android:textColorHint="black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/AMaterno"
            android:layout_width="144dp"
            android:layout_height="wrap_content"

            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="166dp"
            android:layout_marginEnd="60dp"
            android:layout_marginRight="60dp"
            android:hint="Apellido Materno"
            android:inputType="text"
            android:shadowColor="black"
            android:textColorHint="black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/Insertar"
            android:layout_width="129dp"
            android:layout_height="131dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="230dp"
            android:layout_marginEnd="142dp"
            android:layout_marginRight="142dp"
            android:background="@drawable/estudiante"
            android:onClick="RegistrarAlumno"
            android:text="Registrar Alumno "
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/Modificar"
            android:layout_width="148dp"
            android:layout_height="123dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="382dp"
            android:layout_marginRight="228dp"
            android:background="@drawable/logino"
            android:onClick="ActualizarAlumno"
            android:text="Modificar alumno"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/Borrar"
            android:layout_width="133dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="376dp"
            android:layout_marginEnd="24dp"
            android:layout_marginRight="24dp"
            android:background="@drawable/salida"
            android:onClick="EliminarAlumno"
            android:text="Dar de Baja a alumno"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/Consultar"
            android:layout_width="138dp"
            android:layout_height="125dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="540dp"
            android:layout_marginEnd="232dp"
            android:layout_marginRight="232dp"
            android:background="@drawable/prevenir"
            android:onClick="BuscarAlumno"
            android:text="Ver Datos del Alumno"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/ConsultarTodo"
            android:layout_width="140dp"
            android:layout_height="115dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="544dp"
            android:layout_marginEnd="36dp"
            android:layout_marginRight="36dp"
            android:background="@drawable/prueba"
            android:onClick="BuscarRegistros"
            android:text="Ver Registros"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>